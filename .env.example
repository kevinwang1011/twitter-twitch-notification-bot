# ===========================================
# GENERAL STREAMER CONFIGURATION
# ===========================================
# These are ordered lists - index 0 maps to the first Twitch/YouTube channel, etc.

# Fan names for each streamer (comma-separated)
FANNAMES=Ninjas,Pokifans,Shroudies

# Display names for each streamer (comma-separated)
DISPLAY_NAMES=Ninja,Pokimane,Shroud

# ===========================================
# TWITCH CONFIGURATION
# ===========================================
# Get these from https://dev.twitch.tv/console

TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# Twitch channel usernames to monitor (comma-separated, same order as FANNAMES/DISPLAY_NAMES)
TWITCH_CHANNELS=ninja,pokimane,shroud

# ===========================================
# YOUTUBE CONFIGURATION
# ===========================================

# YouTube channel IDs to monitor (comma-separated, same order as FANNAMES/DISPLAY_NAMES)
# Find channel ID: Go to channel page -> View page source -> search for "channelId"
YOUTUBE_CHANNELS=UCxxxxxxxxxxxxxxxxxxxxxxx,UCyyyyyyyyyyyyyyyyyyyyyyy

# YouTube scheduled stream video IDs to ignore (comma-separated)
# These are pre-cached to prevent duplicate notifications when they go live
YOUTUBE_SCHEDULED_STREAMS=dQw4w9WgXcQ

# YouTube check interval in seconds (default: 60)
YOUTUBE_CHECK_INTERVAL=60

# ===========================================
# TWITTER/X CONFIGURATION
# ===========================================

# Twitter API credentials (from your Developer Portal app - main account)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Twitter Access tokens (from running twitterVerify.py with your bot account)
TWITTER_ACCESS_TOKEN=your_bot_access_token
TWITTER_ACCESS_TOKEN_SECRET=your_bot_access_token_secret

# ===========================================
# NOTIFICATION TEMPLATES (Optional)
# ===========================================

